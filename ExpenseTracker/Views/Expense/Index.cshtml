@model List<Expense>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Expense
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Description</th>
            <th>Date</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Payment Method</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(x => x.ExpenseId))
        {
            <tr>
                <td>@obj.Description</td>
                <td>@obj.Date.ToString("yyyy-MM-dd")</td>
                <td>@obj.Amount.ToString("C")</td> 
                <td>@obj.Category?.Name</td>
                <td>@obj.PaymentMethod?.MethodName</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="Expense" asp-action="Edit" asp-route-id="@obj.ExpenseId" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Expense" asp-action="Delete" asp-route-id="@obj.ExpenseId" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
